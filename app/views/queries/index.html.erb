<p id="notice"><%= notice %></p>

<h1>Listing Queries</h1>

<table>
  <thead>
    <tr>
      <th>Query</th>
      <th>Format</th>
      <th>Preppend</th>
      <th>Append</th>
      <th>Separator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @queries.each do |query| %>
      <tr>
        <td><%= query.query %></td>
        <td><%= query.format %></td>
        <td><%= query.preppend %></td>
        <td><%= query.append %></td>
        <td><%= query.separator %></td>
        <td><%= link_to 'Show', query %></td>
        <td><%= link_to 'Edit', edit_query_path(query) %></td>
        <td><%= link_to 'Label',  "/queries/" + query.id.to_s + "/exec.json" %></td>
        <td><%= link_to 'Destroy', query, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

